  "packageManager": "pnpm@10.26.2",
  "main": "index.js",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "test": "turbo run test --parallel",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint --parallel",
    "lint:fix": "turbo run lint:fix --parallel",
    "typecheck": "turbo run typecheck --parallel",
    "db:generate:api": "turbo run db:generate --filter=@template/api",
    "db:migrate:api": "turbo run db:migrate --filter=@template/api",
    "openapi:generate:api": "turbo run openapi:generate --filter=@template/api"
  },
